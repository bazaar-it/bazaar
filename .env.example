# Since the ".env" file is gitignored, you can use the ".env.example" file to
# build a new ".env" file when you clone the repo. Keep this file up-to-date
# when you add new variables to `.env`.

# This file will be committed to version control, so make sure not to have any
# secrets in it. If you are cloning this repo, create a copy of this file named
# ".env" and populate it with your secrets.

# When adding additional environment variables, the schema in "/src/env.js"
# should be updated accordingly.

# Next Auth
# You can generate a new secret on the command line with:
# npx auth secret
# https://next-auth.js.org/configuration/options#secret
AUTH_SECRET=""

# Next Auth Providers
AUTH_DISCORD_ID=""
AUTH_DISCORD_SECRET=""
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# Drizzle
# PRODUCTION DATABASE (DO NOT USE FOR LOCAL DEVELOPMENT)
# DATABASE_URL='postgresql://user:password@host/database?sslmode=require'
# DATABASE_URL_NON_POOLED='postgresql://user:password@host/database?sslmode=require'

# DEVELOPMENT BRANCH DATABASE (USE THIS FOR LOCAL DEVELOPMENT)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"
DATABASE_URL_NON_POOLED="postgresql://user:password@host/database?sslmode=require"
NEXTAUTH_URL="http://localhost:3000"

# AI Models
OPENAI_API_KEY="sk-proj-..."
ANTHROPIC_API_KEY="sk-ant-api03-..."
GOOGLE_GEMINI_API_KEY="AIzaSy..."
DEFAULT_ADB_MODEL="o4-mini"
MODEL_PACK="optimal-pack"
MAX_TOKENS="20000"

# Environment
NODE_ENV="development"

# R2 Storage (Components)
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="bazaar-vid-components"
R2_PUBLIC_URL="https://pub-your-public-id.r2.dev"

# Cloudflare R2 Storage (Images)
CLOUDFLARE_R2_ENDPOINT="https://your-account-id.eu.r2.cloudflarestorage.com"
CLOUDFLARE_R2_ACCESS_KEY_ID=""
CLOUDFLARE_R2_SECRET_ACCESS_KEY=""
CLOUDFLARE_R2_BUCKET_NAME="bazaar-images"
CLOUDFLARE_R2_PUBLIC_URL="https://pub-your-public-id.r2.dev"

# Cron Job
CRON_SECRET=""

# Worker Configuration
WORKER_POLLING_INTERVAL="10000"
TASK_PROCESSOR_POLLING_INTERVAL="10000"
DISABLE_BACKGROUND_WORKERS="false"
USE_MESSAGE_BUS="true"
LOG_AGENT_URL="http://localhost:3002"

# Base URL for the application (used for share links)
NEXT_PUBLIC_BASE_URL="https://bazaar.it"

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Google Analytics API (for admin dashboard)
GA_PROPERTY_ID="" # Your GA4 property ID (e.g., "123456789")
# Option 1: Use service account JSON file
GOOGLE_APPLICATION_CREDENTIALS="" # Path to service account JSON file
# Option 2: Use individual credentials
GA_CLIENT_EMAIL="" # Service account email
GA_PRIVATE_KEY="" # Service account private key (keep the \n characters)

# Features
FEATURE_MCP_ENABLED="true"

# Lambda Configuration
RENDER_MODE="lambda"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
REMOTION_FUNCTION_NAME="remotion-render-4-0-320-mem3008mb-disk10240mb-300sec"
REMOTION_BUCKET_NAME="remotionlambda-useast1-yb1vzou9i7"
WEBHOOK_SECRET=""

# Remotion Lambda Site URL (update after deploying with: npx remotion lambda sites create)
REMOTION_SERVE_URL="https://remotionlambda-useast1-yb1vzou9i7.s3.us-east-1.amazonaws.com/sites/bazaar-vid-fixed/index.html"

# Lambda Performance Settings
LAMBDA_MEMORY_MB="3008"
LAMBDA_DISK_SIZE_MB="10240"

# User quotas
USER_DAILY_EXPORT_LIMIT="10"
MAX_RENDER_DURATION_MINUTES="30"

# GitHub Webhook (for changelog integration)
GITHUB_WEBHOOK_SECRET="your-webhook-secret-here"

# GitHub OAuth (for component animation)
GITHUB_OAUTH_CLIENT_ID="your-github-oauth-app-client-id"
GITHUB_OAUTH_CLIENT_SECRET="your-github-oauth-app-client-secret"

# Figma Integration
FIGMA_CLIENT_ID="your-figma-oauth-app-client-id"
FIGMA_CLIENT_SECRET="your-figma-oauth-app-client-secret"
FIGMA_OAUTH_CALLBACK_URL="http://localhost:3000/api/auth/figma/callback"
# Optional: For development/testing with Personal Access Token
FIGMA_PAT=""

# Live streaming status (homepage badge)
# Secret for webhook POST auth (use a long random string)
LIVE_STATUS_SECRET="replace-with-strong-secret"
# Default URL to send users when live (e.g., X profile or broadcast link)
LIVE_URL_DEFAULT="https://x.com/Bazaar___it"
# Optional: Force live state (true/false) for emergencies or testing
# LIVE_FORCE="false"
